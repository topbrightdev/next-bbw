{
  "compilerOptions": {
    "module": "esnext",
    "esModuleInterop": true,
    "target": "es5",
    "moduleResolution": "node",
    "sourceMap": false,

    "lib": ["dom", "dom.iterable", "esnext"],
    "importHelpers": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@context/*": ["context/*"],
      "@config/*":["config/*"],
      "@utils/*": ["utils/*"],
      "@services/*": ["services/*"],
      "@sections/*": ["sections/*"],
      "@image/*": ["assets/image/*"]
    }
  },
  "exclude": ["node_modules", ".next", "out", "dist"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "./src/**/*"]
}
